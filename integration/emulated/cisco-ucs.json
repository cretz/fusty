{
  "builders": [
    {
      "type": "virtualbox-ovf",
      "format": "ova",
      "source_path": "cisco-ucs.ova",
      "ssh_username": "ucspe",
      "ssh_password": "ucspe",
      "boot_wait": "4m30s",
      "shutdown_command" : "echo 'packer' | sudo -S shutdown -P now",
      "guest_additions_mode": "disable",
